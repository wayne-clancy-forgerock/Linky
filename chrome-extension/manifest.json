{
  "manifest_version": 2,

  "name": "Linky Extension",
  "short_name": "Linky",
  "description": "Add new links to Linky.",
  "version": "1.4",

  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "bookmarks",
    "https://api.myjson.com/*"
  ],

  "externally_connectable": {
    "matches": ["http://10.0.75.1:8080/*"]
  },

  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  }
}
